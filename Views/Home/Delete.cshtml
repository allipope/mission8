@{
    ViewData["Title"] = "Delete";
}

@model ApplicationResponse

<h2 class="text-center">Confirm Deletion</h2>
<h3 class="text-center">Are you sure you want to delete the following task: @Model.Task</h3>

<div class="text-center">
    <form method="post" asp-controller="Home" asp-action="Delete">
        <button type="submit" class="button">Delete</button>
        <a asp-controller="Home" asp-action="MovieList" class="button">Cancel</a>
        <input type="hidden" asp-for="ApplicationID" />
    </form>
</div>