@{
    ViewData["Title"] = "Add Task";
}

@model mission8.Models.ApplicationResponse

<h1 class="text-center" style="font-weight:100">Add a Task</h1>

<div align="center" valign="middle">
    <fieldset class="text-center" style="width: 400px">
        <form method="post" style="margin:30px">
            <div asp-validation-summary="All"></div>

            @*<input asp-for="ApplicationID" hidden />*@
            <label asp-for="Task">Task:</label>
            <input asp-for="Task" />
            <br /><br />

            <label asp-for="DueDate">Due Date:</label>
            <input asp-for="DueDate" />
            <br /><br />

            <label asp-for="Quadrant">Quadrant:</label>
            <input asp-for="Quadrant" />
            <br /><br />

            <label asp-for="CategoryID">Category:</label>
            <select asp-for="CategoryID">
                <option value="">Choose a category</option>
                @foreach (Category c in ViewBag.Categories)
                {
                    <option value="@c.CategoryID">@c.CategoryName</option>
                }
            </select>
            <br /><br />

            <label asp-for="Completed">Completed:</label>
            <select asp-for="Completed">
                <option value="" selected>True or False?</option>
                <option>True</option>
                <option>False</option>
            </select>
            <br /><br />

            <button type="submit">Add Task</button>
        </form>
    </fieldset>
</div>